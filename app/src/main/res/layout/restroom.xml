<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#00FF40"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BtnReturnFirst"
            android:layout_width="64dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:backgroundTint="#FFFF00"
            android:text="홈"
            android:textColor="#FF000000" />

        <TextView
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00FF40"
            android:text="                    공부쉽룸"
            android:textSize="20dp" />

        <Button
            android:id="@+id/BtnStudyroom"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="#FFFF00"
            android:text="공부합룸"
            android:textColor="#FF000000" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*홉 버튼 클릭 시 모든 정보가 사라집니다(비회원 모드)\n공부쉽룸 버튼 클릭 시 타이머가 정지됩니다."
        android:textSize="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="휴식공간" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TableRow>

            <ImageButton
                android:id="@+id/Btnbed1"
                android:background="@drawable/button_chang"
                android:layout_width="50dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:enabled="true"
                android:text="1"
                android:visibility="visible" />

            <Button
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:enabled="false" />

            <ImageButton
                android:id="@+id/Btnbed2"
                android:background="@drawable/button_chang2"
                android:layout_width="50dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:enabled="true"
                android:visibility="visible"
                android:text="2" />

        </TableRow>

        <TableRow>

            <ImageButton
                android:id="@+id/Btnbed3"
                android:background="@drawable/button_chang3"
                android:layout_width="50dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:enabled="true"
                android:text="3"
                android:visibility="visible" />

            <Button
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:enabled="false" />

            <ImageButton
                android:id="@+id/Btnbed4"
                android:background="@drawable/button_chang4"
                android:layout_width="50dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:enabled="true"
                android:visibility="visible"
                android:text="4" />

        </TableRow>



        <TableRow>

            <ImageButton
                android:id="@+id/Btnbed5"
                android:background="@drawable/button_chang5"
                android:layout_width="50dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:enabled="true"
                android:text="5"
                android:visibility="visible" />

            <Button
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:enabled="false" />

            <ImageButton
                android:id="@+id/Btnbed6"
                android:background="@drawable/button_chang6"
                android:layout_width="50dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:enabled="true"
                android:visibility="visible"
                android:text="6" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="안쪽" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Chronometer
            android:id="@+id/chronometer2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:format="휴식시간  %s"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp">

        <Button
            android:id="@+id/btnTimeStart2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:backgroundTint="#F7FE2E"
            android:text="시작"
            android:textColor="#FF000000" />

        <Button
            android:id="@+id/btnTimeStop2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:backgroundTint="#F7FE2E"
            android:text="정지"
            android:textColor="#FF000000" />

        <Button
            android:id="@+id/btnTimeReset2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:backgroundTint="#F7FE2E"
            android:text="초기화"
            android:textColor="#FF000000" />

    </LinearLayout>
</LinearLayout>